{
  "name": "cjbagley/head-first-design-patterns",
  "description": "Coding along with the 'Head First Design Patterns' 2nd edition ",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Colin Bagley",
      "email": "cjbagley@googlemail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "DesignPatterns\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DesignPatterns\\Tests\\": "src/"
    }
  },
  "require": {
    "php": ">=8.3"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "rector/rector": "^2.0",
    "friendsofphp/php-cs-fixer": "^3.60",
    "phpunit/phpunit": "^12.0"
  },
  "scripts": {
    "rector": "./vendor/bin/rector",
    "stan": "./vendor/bin/phpstan --memory-limit=2G",
    "test": "./vendor/bin/phpunit --testdox --display-all-issues",
    "fix": "./vendor/bin/php-cs-fixer fix --allow-risky=yes"
  }
}
